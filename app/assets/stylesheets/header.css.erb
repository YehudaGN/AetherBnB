.header-container {
    display: flex;
    justify-content: space-around;
    border: 1px solid lightgrey;
    align-items: center;
    color: transparent;
    z-index: 2;
    position: sticky;
}

.logo {
    margin-top: 0.7%;
    width: 326px;
    height: 44px;
    background-image: url(<%= asset_path 'logo.png'%>);
    background-color: 'red';
    background-position-x: left;
    background-position-y: top;
    background-repeat: no-repeat;

}

.menu-container {
    position: relative;
    display: inline-block;
}

.menu-button {
  padding: 0;
  width: 50px;
  border: 0;
  background-color: #fff;
  color: #333;
  cursor: pointer;
  outline: 0;
  font-size: 30px;
  border-radius: 10px;
  background: white;
  opacity: .8;
}

.dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  width: 300px;
  z-index: 2;
  border: 1px solid rgba(0, 0, 0, 0.04);
  box-shadow: 0 16px 24px 2px rgba(0, 0, 0, 0.14);
}

.logout-ul, .login-signup-ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.menu-li {
  padding: 8px 12px;
}

.menu-li:hover {
  background-color: rgba(0, 0, 0, 0.14);
  cursor: pointer;
}

